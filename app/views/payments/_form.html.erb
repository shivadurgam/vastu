      <%= f.text_field :cardNumberMask, :class => 'form-control' %>
    </div>
    <%= error_span(@payment[:cardNumberMask]) %>
  </div>
  <div class="control-group">
    <%= f.label :cardTypeCode, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cardTypeCode, :class => 'form-control' %>
    </div>
    <%= error_span(@payment[:cardTypeCode]) %>
  </div>
  <div class="control-group">
    <%= f.label :cardType, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :cardType, :class => 'form-control' %>
    </div>
    <%= error_span(@payment[:cardType]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            payments_path, :class => 'btn btn-default' %>

<% end %>
