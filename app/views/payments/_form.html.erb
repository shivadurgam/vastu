<%= form_for @payment, :html => { :class => "form-horizontal payment" } do |f| %>

    <% if @payment.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@payment.errors.count, "error") %> prohibited this payment from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @payment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :amount, :class => 'form-control' %>
    </div>
    <%= error_span(@payment[:amount]) %>
  </div>
  <div class="control-group">
    <%= f.label :responseCode, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :responseCode, :class => 'form-control' %>
    </div>
    <%= error_span(@payment[:responseCode]) %>
  </div>
  <div class="control-group">
    <%= f.label :responseMessage, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :responseMessage, :class => 'form-control' %>
    </div>
    <%= error_span(@payment[:responseMessage]) %>
  </div>
  <div class="control-group">
    <%= f.label :xref, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :xref, :class => 'form-control' %>
    </div>
    <%= error_span(@payment[:xref]) %>
  </div>
  <div class="control-group">
    <%= f.label :amountReceived, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :amountReceived, :class => 'form-control' %>
    </div>
    <%= error_span(@payment[:amountReceived]) %>
  </div>
  <div class="control-group">
    <%= f.label :transactionID, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :transactionID, :class => 'form-control' %>
    </div>
    <%= error_span(@payment[:transactionID]) %>
  </div>
  <div class="control-group">
    <%= f.label :cardNumberMask, :class => 'control-label' %>
