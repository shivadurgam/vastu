<!DOCTYPE html>
<html>
<head>
  <title>Vastu</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

	<% if signed_in? %>
	<div class="user-status">
	 <h5 style="color:red">Signed in as: <%= current_user.name %></h5>
	</div>
		
	<% end %>

	<%= render 'layouts/header' %>

	<div class="site_msg">This site is under construction. Inconvenience regretted.
	</div>
	<%= render 'layouts/images' %>
	


	<% flash.each do |key, value| %>
	<div class="flash_<%=key %>">
		<%= value %>
	</div>
	<% end %>


	<div class="container"> 
		<%= yield %>
	</div>


</body>
</html>
